<!DOCTYPE html>
<html>
	<head>
		<title>{{item.name}}</title>
		<link rel="shortcut icon" href="../static/favicon.ico" type="image/x-icon">
		<link rel="stylesheet" href="../static/metamath.css">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200;500&family=Bitter:wght@200;500;700&display=swap">
		<script>
			MathJax = {
				options: {
					renderActions: {
						find: [10, function (doc) {
							for (const node of document.querySelectorAll('.math.math-inline')) {
								const math = new doc.options.MathItem(node.textContent, doc.inputJax[0], false);
								math.start = {node: node, delim: '', n: 0};
								math.end = {node: node, delim: '', n: 0};
								doc.math.push(math);
							}
							for (const node of document.querySelectorAll('.math.math-display')) {
								const math = new doc.options.MathItem(node.textContent, doc.inputJax[0], true);
								math.start = {node: node, delim: '', n: 0};
								math.end = {node: node, delim: '', n: 0};
								doc.math.push(math);
							}
						}, '']
					}
				}
			}
		</script>
		<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js"></script>	
		{{header}}
	</head>
	<body>
		<h1><logo/>Metamath Blueprint : {{project.name}}</h1>
		<hr />
		<h2>{{item.info.type}} <a href="#" class="label {{item.info.type}}">{{item.name}}</a></h2>
		<div class="container">
			{{> nav}}
			<div class="contents">
				<div class="header">
					{{#if item.info.state}}
						<div>
							<label for="status">Status:</label>
							<div class="info" name="status">{{item.info.state}}</div>
						</div>
					{{/if}}
					{{#if item.info.statement}}
						<div>
							<label for="statement">Statement:</label>
							<pre class="info step" name="statement">{{item.info.statement}}</pre>
						</div>
					{{/if}}
					{{#if item.info.reference}}
						<div>
							<label for="reference">Reference:</label>
							<div class="info" name="reference">{{item.info.reference}}</div>
						</div>
					{{/if}}
					{{#if item.info.wikipedia}}
						<div>
							<label for="wikipedia">Wikipedia:</label>
							<a class="info" name="wikipedia" href="{{item.info.wikipedia}}">{{item.info.wikipedia}}</a>
						</div>
					{{/if}}
				</div>
				<hr />
				<p>{{item.body}}</p>
			</div>
		</div>
	</body>
</html>